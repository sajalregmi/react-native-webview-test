{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src", "index.ts", "index.tsx"],
  "exclude": ["node_modules"]
}
